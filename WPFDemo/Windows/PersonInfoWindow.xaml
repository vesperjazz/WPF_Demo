<local:CustomWindow  x:Class="WPFDemo.Windows.PersonInfoWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:WPFDemo.Windows"
                     xmlns:pidc="clr-namespace:WPFDemo.UserControls.PersonInfoDisplayControl"
                     mc:Ignorable="d" 
                     Style="{StaticResource CustomWindowStyle}"
                     Title="Person Info" Height="150" Width="450" 
                     IsHideWindowVisible="Visible"
                     IsMaximiseMinimiseVisible="Visible"
                     Background="Azure">
    <Grid Margin="10">
        <Border BorderBrush="Red" BorderThickness="1">
            <pidc:PersonInfoDisplay/>
        </Border>
    </Grid>
</local:CustomWindow>
