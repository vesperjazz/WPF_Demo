<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="WPF Basic Demo" Height="400" Width="630" Background="Azure" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="305"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" 
               FontWeight="Bold">
            <TextBlock Text="Basic Binding" TextDecorations="Underline"/>
        </Label>
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">
            <Label Content="First Name: "/>
            <!-- Target is the TextBox's Text property, which must a dependency property. -->
            <!-- Source is the provider of information, to which the target binds to, in this case the Model's FirstName property -->
            <!-- UpdateSourceTrigger's default option is control dependent, e.g. TextBox's Default is the same as LostFocus -->
            <TextBox Name="FirstNameTxtBox" 
                     Width="200"
                     MaxLength="15"
                     HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Text="{Binding Model.FirstName, UpdateSourceTrigger=LostFocus}"/>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1" Margin="0,5,0,0">
            <Label Content="Last Name:"/>
            <TextBox Name="LastNameTxtBox" 
                     Width="200"
                     MaxLength="15"
                     HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Text="{Binding Model.LastName, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>

        <DockPanel Grid.Row="2" Grid.Column="0" Margin="0,5,0,0">
            <Label Content="First Name LostFocus/Default: "/>
            <TextBlock VerticalAlignment="Center" 
                       FontWeight="Bold"
                       Text="{Binding Model.FirstName, FallbackValue='Fallback Text'}"/>
        </DockPanel>

        <DockPanel Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
            <Label Content="Last Name PropertyChanged: "/>
            <TextBlock VerticalAlignment="Center" 
                       FontWeight="Bold"
                       Text="{Binding Model.LastName, FallbackValue='Fallback Text'}"/>
        </DockPanel>

        <DockPanel Grid.Row="3" Grid.Column="0" Margin="0,5,0,0">
            <Label Content="Gender: "/>
            <!-- Simple primitive type binding, e.g. a list of strings, integers and so on. -->
            <ComboBox Margin="18,0,0,0" Width="200" 
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Model.Genders}"
                      SelectedItem="{Binding Model.SelectedGender}"/>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="1" Margin="0,5,0,0">
            <Label Content="Job: "/>
            <!-- Complex object binding, e.g. a list of objects with multiple properties per object. -->
            <ComboBox Margin="35,0,0,0" Width="200" 
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Model.Jobs}"
                      SelectedItem="{Binding Model.SelectedJob}"
                      SelectedValuePath="ID"
                      SelectedValue="{Binding Model.SelectedJobID}"
                      DisplayMemberPath="Description"/>
        </DockPanel>
        <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,5,0,0"/>

        <Label Grid.Row="5" Grid.Column="0" 
               FontWeight="Bold">
            <TextBlock Text="Commands and Code Behind" TextDecorations="Underline"/>
        </Label>

        <DockPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
            <Label Content="Full Name with Date:"/>
            <TextBlock Name="LastNameTxtBlock"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="{Binding Model.FullName, FallbackValue='Fallback Text'}" />
        </DockPanel>

        <Button Name="CommandBtn" 
                Grid.Row="6" Grid.Column="1"
                Margin="0,5,0,0" Height="25"
                Command="{Binding UpdateFullNameCommand}"
                CommandParameter="{Binding}"
                Content="See information by Command" />

        <Button Name="CodeBehindBtn" 
                Grid.Row="7" Grid.Column="1"
                Margin="0,5,0,0" Height="25"
                IsEnabled="{Binding Model.IsEnableButton}"
                Content="See information by Code Behind" 
                Click="CodeBehindBtn_Click"/>

        <Separator Grid.Row="8" Grid.ColumnSpan="2" Margin="0,5,0,0"/>

        <Label Grid.Row="9" Grid.Column="0" 
               FontWeight="Bold">
            <TextBlock Text="Synchronous and Asynchronous" TextDecorations="Underline"/>
        </Label>

        <Grid Grid.Row="10" Grid.Column="0" Margin="5,5,10,0">
            <ProgressBar x:Name="PrgsBr"
                         Minimum="0" Maximum="{Binding Model.MaximumProgressBar, Mode=OneTime}"/>
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Text="{Binding ElementName=PrgsBr, Path=Value, StringFormat={}{0:0}%}"/>
        </Grid>

        <Button Name="ClearProgressBarBtn"
                Grid.Row="11" Grid.Column="0" 
                Margin="5,5,10,0" 
                Width="100" Height="25"
                HorizontalAlignment="Right"
                Content="Clear" 
                Click="ClearProgressBarBtn_Click"/>

        <Button Name="SyncBtn" 
                Grid.Row="10" Grid.Column="1"
                Margin="0,5,0,0" Height="25"
                Content="Simulate Synchronous Long Running Task" 
                Click="SyncBtn_Click"/>

        <Button Name="AsyncBtn" 
                Grid.Row="11" Grid.Column="1"
                Margin="0,5,0,0" Height="25"
                Content="Simulate Asynchronous Long Running Task"
                Click="AsyncBtn_Click"/>

        <DockPanel Grid.Row="12" Grid.Column="1">
            <Button Name="AsyncWithCancelBtn"
                    Margin="0,5,0,0" Height="25"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="Simulate Asynchronous Long Running Task"
                    Click="AsyncWithCancelBtn_Click"/>
            <Button Name="CancelTaskBtn"
                    IsEnabled="{Binding Model.IsTaskCancellable, Mode=OneWay}"
                    Margin="5,5,0,0"
                    HorizontalAlignment="Stretch"
                    Content="Cancel" 
                    Click="CancelTaskBtn_Click"/>
        </DockPanel>

    </Grid>
</Window>
